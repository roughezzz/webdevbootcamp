<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class= "container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>  
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Here's the names and images of campgrounds </h3>
        </div>
    </div>
    
    <div class="row text-center" style = "display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(ground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img style= "max-width: 100%; max-height: 100%"src = "<%= ground.image %>">
                    <div class="figure-caption" style="margin: 8px;">
                        <h6><%= ground.name %></h6>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= ground._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<% include ../partials/footer %>